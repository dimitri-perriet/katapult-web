# .htaccess dans public_html (ou le dossier racine de votre frontend)
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Ne pas appliquer les règles suivantes aux requêtes pour le backend
  RewriteRule ^backend/ - [L]

  # Rediriger toutes les requêtes qui ne sont PAS des fichiers ou dossiers existants vers index.html
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^ index.html [L]
</IfModule>